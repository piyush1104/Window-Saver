{
	"manifest_version": 2,

	"version": "1.6",
	"default_locale": "en",

	"name": "Window Saver",
	"description": "__MSG_extensionDescription__",
	"homepage_url": "https://github.com/piyush1104/Window-Saver",

	"icons": {
		"96": "icons/dark.svg"
	},

	"permissions": [
		"bookmarks",
		"tabs",
		"storage"
	],

	"incognito": "spanning",

	"background": {
		"scripts": ["background.js"]
	},

	"options_ui": {
		"page": "options/options.html"
	},

	"browser_action": {
		"default_title": "Window Saver",
		"default_popup": "popup/popup.html",
		"default_icon": {
			"16": "icons/dark.svg",
			"32": "icons/dark.svg",
			"64": "icons/dark.svg",
			"128": "icons/dark.svg"
		},
		"theme_icons": [
			{
				"size": 16,
				"light": "icons/light.svg",
				"dark": "icons/dark.svg"
			}, {
				"size": 32,
				"light": "icons/light.svg",
				"dark": "icons/dark.svg"
			}, {
				"size": 64,
				"light": "icons/light.svg",
				"dark": "icons/dark.svg"
			}, {
				"size": 128,
				"light": "icons/light.svg",
				"dark": "icons/dark.svg"
			}
		]
	}

}
